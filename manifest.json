{
  "manifest_version": 3,
  "name": "NilMode",
  "version": "2.0.0",
  "description": "Block Facebook, YouTube and stay focused ðŸš€",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "./assets/icon.png"
  },
  "icons": {
    "16": "./assets/icon.png",
    "48": "./assets/icon.png",
    "128": "./assets/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*", "*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
