{
  "manifest_version": 3,
  "name": "NilMode",
  "version": "2.0.0",
  "description": "Block Facebook, YouTube and stay focused",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "./assets/icon.png"
  },
  "icons": {
    "16": "./assets/icon.png",
    "48": "./assets/icon.png",
    "128": "./assets/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*", "*://*.youtube.com/*"],
      "js": [
        "content/utils.js",
        "content/facebook/productive.js",
        "content/facebook/blacklist.js",
        "content/facebook/sponsored.js",
        "content/facebook/reels.js",
        "content/youtube/style.js",
        "content/youtube/time.js",
  "content/youtube/extract.js",
  "content/youtube/progress.js",
        "content/youtube/statsPopulate.js",
        "content/youtube/handlers.js",
        "content/youtube/save.js",
        "content/youtube/inject.js",
        "content/init.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
